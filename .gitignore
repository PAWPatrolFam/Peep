public class RandomNumbers {
    public static void main(String[] args) {
      System.out.println("Hello, World!");
      
      Scanner input = new Scanner(System.in);
      System.out.println("Enter your age in the text box above");
      int age = input.nextInt();
      int div = age % 4;
      
      System.out.println("Your age is " + age);
      
      if (div == 0){
        System.out.println("Also, your age is divisible by 4");
      }else{
        System.out.println("Also, your age is NOT divisible by 4");
      }
      
  }
}
